<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/map.css">
<div id="map"></div>
    <h1>All Grounds</h1>
    <div>
        <a href="/campgrounds/new">Make New Campground</a>
    </div>
    <ul>
        <% for (let campground of campgrounds) { %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) { %>
                        <img src="<%= campground.images[0].url %>" class="img-fluid" alt="">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dgo3xc5ms/image/upload/v1700251908/YelpCamp/z16osstiscmdalzblyeq.jpg" alt="" class="img-fluid">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="csard-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%=
                                    campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <li>
                <a href="/campgrounds/<%= campground._id %>">
                    
                </a>
            </li> -->
            <% } %>

            <script>const campgrounds = <%- JSON.stringify(campgrounds) %>;</script>

            <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
            <script src="https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js"></script>
    
        <script src="/javascripts/clusterMap.js">
        </script>  